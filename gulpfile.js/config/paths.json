{
  "components": {
    "styles": "./components/*/css/*.*css",
    "scss": "./components/*/scss/*.*css",
    "scripts": "./components/*/*.js",
    "liquid": "./components/*/*.liquid"
  },
  "layouts": {
    "styles": "./layouts/*/**.*css",
    "scss": "./layouts/*/**.*css",
    "scripts": "./layouts/*/*.js",
    "liquid": "./layouts/*/*.liquid"
  },
  "plugins": {
    "styles": "./plugins/*/*/*.*css",
    "scripts": "./plugins/*/*/*.js"
  },
  "config": {
    "configs": "./config/*.json"
  },
  "media": {
    "paths": "./media/*/*.*"
  },
  "theme": {
    "media": "./theme/media",
    "config": "./theme/config",
    "snippets": "./theme/snippets",
    "templates": "./theme/templates"
  },
  "clear": {
    "path": "./theme/*/*"
  },
  "fonts": {
    "path": ["./fonts/**/*.*", "!./fonts/*/*.*css"],
    "style": "./fonts/**/*.*css"
  },
  "bundles": {
    "css": "./bundles/css",
    "js": "./bundles/js"
  }
}
