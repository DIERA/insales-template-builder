{
  "components": {
    "root": "./project/components/",
    "styles": "./project/components/*/css/*.*css",
    "scss": ["./project/scss/variables.scss", "./project/scss/variables_default.scss", "./project/components/*/scss/*.*css"],
    "scripts": "./project/components/*/*.js",
    "liquid": "./project/components/*/*.liquid"
  },
  "layouts": {
    "styles": "./project/layouts/*/**.*css",
    "scss": ["./project/scss/variables.scss", "./project/scss/variables_default.scss", "./project/layouts/*/**.*css"],
    "scripts": "./project/layouts/*/*.js",
    "liquid": "./project/layouts/*/*.liquid"
  },
  "plugins": {
    "styles": "./project/plugins/*/*/*.*css",
    "scripts": "./project/plugins/*/*/*.js",
    "media": ["!./project/plugins/*/*/*.js", "!./project/plugins/*/*/*.*css", "./project/plugins/*/*/*.*"]
  },
  "config": {
    "configs": "./project/config/*.json"
  },
  "media": {
    "paths": "./project/media/*/*.*"
  },
  "theme": {
    "media": "./theme/media",
    "config": "./theme/config",
    "snippets": "./theme/snippets",
    "templates": "./theme/templates"
  },
  "clear": {
    "path": "./theme/*/*"
  },
  "fonts": {
    "path": ["./project/fonts/**/*.*", "!./project/fonts/*/*.*css"],
    "style": "./project/fonts/**/*.*css"
  },
  "bundles": {
    "css": "./project/bundles/css",
    "js": "./project/bundles/js"
  },
  "scss": {
    "variables_default": "./project/scss/variables_default.scss",
    "variables": "./project/scss/variables.scss"
  }
}
